# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration (Supabase)
DATABASE_URL=postgresql://user:password@host:5432/espectro_db
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Redis Cache (ElastiCache)
REDIS_URL=redis://localhost:6379
REDIS_TTL_ARTICLES=300
REDIS_TTL_SOURCES=86400
REDIS_TTL_CLUSTERS=900

# AI Services
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4-turbo
GOOGLE_GEMINI_API_KEY=your-gemini-key
AI_BIAS_BATCH_SIZE=10

# WhatsApp Bot (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_WHATSAPP_NUMBER=+14155238886

# AWS Configuration
AWS_REGION=sa-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=espectro-articles

# Security
JWT_SECRET=your-super-secret-jwt-key
ENCRYPTION_KEY=your-encryption-key-for-lgpd

# External Services
SCRAPER_API_KEY=your-scraper-api-key

# Monitoring
SENTRY_DSN=your-sentry-dsn

# LGPD Compliance
DATA_RETENTION_DAYS=90
ANONYMIZATION_DAYS=30
